    <h1>Create a Customer Ticket</h1>
<% if @ticket.errors.any? %>
  <div id="error_explanation">
    <h2><%= pluralize(@ticket.errors.count, "error") %> prohibited this task from being saved:</h2>

    <ul>
      <% @ticket.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>

    

    <div class="container">
        <%= form_for(@ticket) do |f| %>
        <div class="field form-group">
                <%= f.label :title %> 
                <%= f.text_field :title, class:"form-control" %>
                
        </div>
        <div class="field form-group">
            <%= f.label :description %>
            
            <%= f.text_area :description, class:"form-control" %> 
            
        </div>
        <div class="field form-group">
            <%= f.label :priority %>
            <%= f.select :priority, ["Medium", "High", "Low"], class:"form-control"%>
        </div>
        <br>
        <div class="actions">
          <%= f.submit class:'btn btn-secondary' %>
        </div>
      <% end %>

