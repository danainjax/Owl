<!DOCTYPE html>
<html>
  <head>
    <title>Owl</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    
  </head>
  <!-- Required meta tags -->
    <meta charset="utf-8">
  <!-- Bootstrap installation -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-BmbxuPwQa2lc/FVzBcNJ7UAyJxM6wuqIj61tLrc4wSX0szH/Ev+nYRRuWlolflfl" crossorigin="anonymous">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

<header> 

<img src="/images/Owl logo.png" style="width:15%;height:15%;">

</header>

  <body>
    
    <nav class="navbar navbar-expand-lg navbar-dark bg-light">
      <% if !logged_in? %>
        <%= link_to "Sign Up", signup_path %>  <%= link_to "Log In", login_path %>  <%= link_to('Log in with Facebook!', '/auth/facebook') %>
      <% else %>
        <%= link_to 'Home', root_path %>
        <%= link_to "Add a Task", new_task_path %> 
        <%= link_to "Assign a Task", new_assignment_path %> 
        <%= link_to "Comment on a Task", new_comment_path %>
        <%= link_to "Logout", logout_path, method: "delete" %>
      <% end %>
   
    </div>

    <div>
      <% if flash[:message] %>
        <%= flash[:message]%>
      <% end %>
    </div>
    <%= yield %>
  </body>
</html>
