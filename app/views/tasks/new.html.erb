<br>
<h1>Task Builder Form</><br>

<%= form_for(@task) do |f| %>

    <%= f.label :title %>
    <%= f.text_field :title %><br>

    <%= f.label :description %>
    <%= f.text_area :description %><br>

    <%= f.label :priority %>
    <%= f.range_field(:priority, in: 1..10)%><br>

    <%= f.submit %>





<% end %>